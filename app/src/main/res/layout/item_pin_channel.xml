<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/card_margin_horizontal"
    android:layout_marginVertical="@dimen/card_margin_vertical"
    app:cardCornerRadius="12dp"
    app:cardBackgroundColor="@color/white"
    app:cardElevation="3dp"
    app:strokeWidth="1dp"

    app:strokeColor="@color/Red">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/card_content_padding">

        <TextView
            android:id="@+id/channelName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="@dimen/channel_name_text_size"
            android:textStyle="bold"
            android:maxLines="1"
            android:ellipsize="end"
            tools:text="Channel Name" />

        <TextView
            android:id="@+id/channelDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textColor="#757575"
            android:textSize="@dimen/description_text_size"
            android:maxLines="2"
            android:ellipsize="end"
            tools:text="Optional channel description text" />

        <com.google.android.material.divider.MaterialDivider
            android:layout_width="match_parent"
            android:layout_height="1dp"
            app:dividerColor="@color/bg_blue"
            android:layout_marginTop="@dimen/divider_margin"
            android:layout_marginBottom="@dimen/divider_margin" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:baselineAligned="false">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/viewPinButton"
                style="@style/Widget.MaterialComponents.Button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/view_pin"
                android:textSize="@dimen/button_text_size"
                android:textColor="#FFFFFF"
                app:cornerRadius="8dp"
                android:layout_marginEnd="4dp"
                app:icon="@android:drawable/ic_menu_view"
                app:iconSize="@dimen/button_icon_size"
                app:iconGravity="textStart"
                app:iconTint="#FFFFFF"
                android:backgroundTint="#4CAF50" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/changePinButton"
                style="@style/Widget.MaterialComponents.Button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/change_pin"
                android:textSize="@dimen/button_text_size"
                android:textColor="#FFFFFF"
                app:cornerRadius="8dp"
                android:layout_marginHorizontal="2dp"
                app:icon="@android:drawable/ic_menu_edit"
                app:iconSize="@dimen/button_icon_size"
                app:iconGravity="textStart"
                app:iconTint="#FFFFFF"
                android:backgroundTint="#2196F3" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/forgotPinButton"
                style="@style/Widget.MaterialComponents.Button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:clickable="false"
                android:text="@string/reset_pin"
                android:textSize="@dimen/button_text_size"
                android:textColor="#FFFFFF"
                app:cornerRadius="8dp"
                android:layout_marginStart="4dp"
                app:icon="@android:drawable/ic_menu_revert"
                app:iconSize="@dimen/button_icon_size"
                app:iconGravity="textStart"
                app:iconTint="#FFFFFF"
                android:backgroundTint="#FF5722" />
        </LinearLayout>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView> 